@model TwitterLikeMVC.Models.Posts

@{
    ViewData["Title"] = "Post";
}

<h1>What are you feeling now?</h1>

<h4>Tell us</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Post" class="control-label"></label>
                <textarea asp-for="Post" class="form-control"></textarea>
                <span asp-validation-for="Post" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Post!" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="UserPosts" asp-route-email="@User.Identity.Name">Back to my posts</a>
</div>

